# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Configuration (these will be populated after Terraform deployment)
S3_BUCKET_NAME=your_bucket_name_here
ACCESS_LOGS_BUCKET_NAME=your_access_logs_bucket_here
KMS_KEY_ID=your_kms_key_id_here

# IAM Role ARNs (populated after Terraform deployment)
UPLOAD_ROLE_ARN=arn:aws:iam::account:role/upload-role
ADMIN_ROLE_ARN=arn:aws:iam::account:role/admin-role
READONLY_ROLE_ARN=arn:aws:iam::account:role/readonly-role

# SNS Configuration
SNS_TOPIC_ARN=arn:aws:sns:region:account:security-alerts

# Application Configuration
ENVIRONMENT=dev
PROJECT_NAME=secure-upload-system
LOG_LEVEL=INFO

# Security Settings
ENABLE_MFA=true
ENABLE_CLOUDTRAIL=true
ENABLE_CONFIG=true

# Monitoring Configuration
MONITORING_INTERVAL_MINUTES=5
ALERT_EMAIL=admin@company.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# File Upload Limits
MAX_FILE_SIZE_GB=5
MULTIPART_THRESHOLD_MB=100
MULTIPART_CHUNKSIZE_MB=8
MAX_CONCURRENT_UPLOADS=10

# Database Configuration (for advanced monitoring)
DATABASE_URL=sqlite:///logs/monitoring.db
REDIS_URL=redis://localhost:6379/0

# External Services
GEOLOCATION_API_KEY=your_geo_api_key_here
VIRUS_SCAN_API_KEY=your_virus_scan_api_key_here
